<section id='main-section'>
  <h2> Listings </h2>
  <a href='/listings/new'>add new</a>
    <ul>
      <% @listings.reverse.each do |listing| %>
        <li><span id ='name'>Name: <%= listing.name %></span></li>
          <p>Description: <%= listing.description %></p>
          <p>Price per night: <%= listing.price %></p>
          <form action="/listings/1" method="get">
          <input id='button' type="submit" value="Request to book <%= listing.name %>">
          </form>
          <% end %>
    </ul>
</section>

<% if flash[:notice] %>
  <div id='notice'><%= flash[:notice] %></div>
<% end %>
