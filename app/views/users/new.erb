<section id='main-section'>
<h2>Sign up</h2>

<form action="/users" method="post">
  <label for="first_name">
    First name:
    <input type="text" name="first_name">
  </label>
  <label for="last_name">
    Last name:
    <input type="text" name="last_name">
  </label>
  <label for="email">
    E-mail:
    <input type="email" name="email">
  </label>
  <label for="password">
    Last name:
    <input type="password" name="password">
  </label>
  <input type="submit" value="Sign up as a Guest">
  <input type="submit" value="Sign up as a Host">
</form>
</section>
